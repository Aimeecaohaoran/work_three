<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:src="@drawable/shou_top_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/left_top"/>
        <EditText
            android:id="@+id/sou"
            android:textSize="20sp"
            android:textColor="#fff"
            android:padding="10dp"
            android:hint="搜索一下"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btn_sou"
            android:src="@drawable/shou_top_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            />
    </LinearLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/shouye_recy"></com.jcodecraeer.xrecyclerview.XRecyclerView>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/left_recy"
        android:visibility="gone"></com.jcodecraeer.xrecyclerview.XRecyclerView>


</LinearLayout>